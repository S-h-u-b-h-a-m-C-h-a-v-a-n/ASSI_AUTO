@model VendorApp.Models.Material

@{
    ViewData["Title"] = "Create Material List";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <table class="table table-striped">
        <tr>
    <div class="form-group">
                <label class="form-control">Code</label>
        <input asp-for="Code" class="form-control" style="width:200px" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
        </tr>
        <tr>
    <div class="form-group">
                <label class="form-control">Short Text</label>
                <input asp-for="Short_Text" class="form-control" style="width:450px" />
                <span asp-validation-for="Short_Text" class="text-danger"></span>
    </div>
        </tr>
        <tr>
    <div class="form-group">
                <label class="form-control">Long_Text</label>
                <input asp-for="Long_Text" class="form-control" style="width:450px" />
                <span asp-validation-for="Long_Text" class="text-danger"></span>
    </div>
        </tr>
        <tr>
    <div class="form-group">
                <label class="form-control">Unit</label>
                <input asp-for="Unit" class="form-control" style="width:450px" />
                <span asp-validation-for="Unit" class="text-danger"></span>
    </div>
        </tr>
        <tr>
    <div class="form-group">
                <label class="form-control"> Reorder Level </label>
                <input asp-for="Reorder_Level" class="form-control" style="width:450px" />
                <span asp-validation-for="Reorder_Level" class="text-danger"></span>
    </div>
        </tr>
        <tr>
       <div class="form-group">
                <label class="form-control"> Min Order Quantity </label>
                <input asp-for="Min_Order_Quantity" class="form-control" style="width:200px" />
                <span asp-validation-for="Min_Order_Quantity" class="text-danger"></span>
    </div>
        </tr>
        <tr>
    <div class="form-group">
                <label class="form-control">Valid Till Date  </label>
                <input asp-for="Valid_Till_Date" type="date" class="form-control" style="width:200px" />
        <span asp-validation-for="Valid_Till_Date" class="text-danger"></span>
    </div>
        </tr>
        <tr>
    <div class="form-group">
                <label class="form-control">  IsActive  </label>
        <input asp-for="IsActive" type="checkbox" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
        </tr>
        <tr>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
        </tr>

    </table>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

